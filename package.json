{
  "name": "webextension-email-address-plus",
  "version": "4.0.2",
  "description": "Browser extension that adds labels to email addresses for better organization",
  "private": true,
  "author": "kud",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kud/webextension-email-address-plus.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "web-ext run --firefox=nightly",
    "dev:chrome": "web-ext run --target=chromium",
    "build": "rm -rf web-ext-artifacts/* 2>/dev/null || true && web-ext build --source-dir=. --artifacts-dir=web-ext-artifacts",
    "build:clean": "rm -rf web-ext-artifacts node_modules/.cache",
    "lint": "web-ext lint",
    "sign": "web-ext sign --channel=unlisted",
    "sign:help": "echo 'To sign: 1) Get API credentials from https://addons.mozilla.org/developers/addon/api/key/ 2) Run: web-ext sign --api-key=YOUR_KEY --api-secret=YOUR_SECRET --channel=unlisted'",
    "publish": "open https://addons.mozilla.org/en-US/developers/addon/email-address-plus/edit",
    "format": "prettier --write \"**/*.{js,json,html,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,html,css,md}\""
  },
  "devDependencies": {
    "dotenv": "17.2.1",
    "prettier": "3.6.2",
    "web-ext": "8.9.0"
  },
  "keywords": [
    "browser-extension",
    "email",
    "webextension",
    "firefox",
    "chrome",
    "plus-addressing"
  ]
}
